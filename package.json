{
  "name": "@matiasbontempo/tiny-flags",
  "version": "1.0.0",
  "description": "What is this? Feature flags for ants? Well yes! But also Tiny Flags is simple way to add client-side feature flags that can be updated at runtime.",
  "author": "Matias Bontempo <matias.bontempo@gmail.com> (https://matiasbontempo.com)",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "npm run lint:eslint & npm run lint:ts",
    "lint:eslint": "eslint --ext .ts,.tsx ./src",
    "lint:ts": "tsc --noemit",
    "build": "yarn cleanup & rollup -c --bundleConfigAsCjs",
