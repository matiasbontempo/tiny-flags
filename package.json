  "devDependencies": {
    "@rollup/plugin-terser": "^0.1.0",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/chrome": "^0.0.198",
    "@types/react": "^18.0.21",
    "eslint": "^8.26.0",
    "eslint-config-matiasbontempo": "github:matiasbontempo/eslint-config-matiasbontempo",
    "react": "^18.0.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.5",
    "rollup-plugin-copy": "^3.4.0",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matiasbontempo/tiny-flags.git"
  },
  "bugs": {
    "url": "https://github.com/matiasbontempo/tiny-flags/issues"
  },
  "homepage": "https://github.com/matiasbontempo/tiny-flags#readme",
  "publishConfig": {
    "access": "public"
  }
